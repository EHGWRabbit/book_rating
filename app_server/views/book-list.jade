extends layout 

include _includes/sharedHTMLfunctions 

block content 
 #banner.page-header 
    .row 
        .col-lg-6 
            h1= pageHeader.title 
                small &nbsp;#{pageHeader.strapline}
    .row 
        .col-xs-12.col-sm-8 
            .row.list-group 
                each book in books 
                    .col-xs-12.lost-group-item 
                        h4 
                            a(href='/book')= book.name 
                            small &nbsp;
                                +outputRating(book.rating)
                            span.badge.pull-right.badge-default= book.distance 
                        p.address= book.address 
                        p 
                            each facility in book.facilities 
                                span.label.label-warning=   facility
                                | &nbsp;         
        .col-xs-12.col-sm-4 
            p.lead= sidebar